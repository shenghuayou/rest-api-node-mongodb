<html>
  <head>
    <title>Real time chat room</title>
    <script src='/socket.io/socket.io.js' type='text/javascript'></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
	<script>
        var socket = io.connect('http://localhost:3333')

        function sendMessage(){
          var message = $('#i_input_msg').val();
          if(message != '') {
            socket.emit('chatMessage', username, message);
           }
          socket.on('chatMessage', function(from, message){
              $('#i_messages').append('<li>' + from + '</b>: ' + message + '</li>');
            });


    </script>
</head>
<body>
    <div align="center">
    <h1>Here is chat room</h1>
    Username: <%= username %>
    <hr>
    <ul id="i_messages"></ul>
    <form id="i_form" action="" onsubmit="return sendMessage();" >
        Message: <input type="text" id="i_input_msg"></input>
       <input type="submit" id="button" value="Send"/> 
    </form>
    </div>
</body>
</html>